# Environment Configuration for MLB Analytics Mobile App

# Backend API Configuration
API_BASE_URL=http://localhost:8000/api

# Development Settings
NODE_ENV=development
DEBUG_MODE=true

# Optional: Analytics and Error Reporting
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_KEY=your_analytics_key_here

# Cache Configuration
CACHE_TTL=300000  # 5 minutes in milliseconds
SEARCH_CACHE_TTL=600000  # 10 minutes for search results

# Feature Flags
ENABLE_NATURAL_LANGUAGE_SEARCH=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_OFFLINE_MODE=true

# API Rate Limiting
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=10000   # 10 seconds
